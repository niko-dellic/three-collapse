{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/lib",
    "rootDir": "./src",
    "moduleResolution": "node",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/wfc3d/**/*",
    "src/loaders/**/*",
    "src/renderers/**/*",
    "src/utils/**/*",
    "src/generators/**/*",
    "src/index.ts",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "src/main.ts",
    "src/wfc.worker.ts",
    "examples/**/*",
    "node_modules",
    "dist"
  ]
}
